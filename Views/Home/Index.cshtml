@{
    ViewData["Title"] = "Home Page";
}

<div class="card" style="position: relative;border:none;">
    <div class="mb-3">
        <img src="https://img.freepik.com/fotos-premium/imagen-fondo-borrosa-clinica-efecto-desfocado-imagen-contexto-borrosa-imagen-conceptual-publicidad-sanitaria_719646-80724.jpg" alt="Error" style="width: 100%; height: 450px; border-radius: 20px;" />

        <!-- Contenedor para los labels y el botón -->
        <div style="position: absolute; z-index: 2; top: 100px; left: 40px; color: #19191a; padding: 10px; height:330px">
            <label style="display: block; font-size: 40px; font-family: 'Georgia', serif;">
                Consultorio de Especialidades Médicas
            </label>
            <label style="display: block; font-size: 25px; font-family: 'Georgia', serif;">
                Cuidamos de Ti con Excelencia Médica
            </label>
            <a asp-controller="Servicios" asp-action="Turnos" class="btn btn-light" style="margin-top: 20px; font-size: 20px; font-family: 'Georgia', serif; border-radius: 15px;">
                Turno online
            </a>
        </div>
    </div>
</div>

<div class="container mt-5">
    <h2 class="text-center">Nuestros Servicios</h2>
    <div class="row">
        <div class="col-md-4 text-center">
            <div class="card">
                <img src="https://hsmcidadeocidental.com.br/wp-content/uploads/2023/06/capa-Cardiologia.jpg" class="card-img-top" alt="Servicio 1" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">Cardiología</h5>
                    <p class="card-text">Atención especializada para el diagnóstico y tratamiento de enfermedades del corazón y sistema circulatorio.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 text-center">
            <div class="card">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRoFfX8PLHeICYd2OnSDAr5nxKNEc8mmZVoqA&s" class="card-img-top" alt="Servicio 2" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">Dermatología</h5>
                    <p class="card-text">Evaluación y tratamiento de afecciones de la piel, cabello y uñas, asegurando salud y estética.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 text-center">
            <div class="card">
                <img src="https://as01.epimg.net/deporteyvida/imagenes/2017/10/08/portada/1507466195_601068_1507466306_noticia_normal.jpg" class="card-img-top" alt="Servicio 3" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">Pediatría</h5>
                    <p class="card-text">Cuidado integral de la salud infantil, desde recién nacidos hasta adolescentes, con un enfoque en prevención y bienestar.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <h2 class="text-center">Contáctanos</h2>
    <form>
        <div class="mb-3">
            <label for="name" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="name" required>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Correo Electrónico</label>
            <input type="email" class="form-control" id="email" required>
        </div>
        <div class="mb-3">
            <label for="message" class="form-label">Mensaje</label>
            <textarea class="form-control" id="message" rows="3" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
</div>
