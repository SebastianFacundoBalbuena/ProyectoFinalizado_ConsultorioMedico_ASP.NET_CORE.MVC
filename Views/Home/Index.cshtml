@{
    ViewData["Title"] = "Home Page";

}

<!-- Sección del encabezado con imagen y llamada a la acción -->
<div class="card border-0" style="position: relative;">
    <img src="https://img.freepik.com/fotos-premium/imagen-fondo-borrosa-clinica-efecto-desfocado-imagen-contexto-borrosa-imagen-conceptual-publicidad-sanitaria_719646-80724.jpg" alt="Error" class="img-fluid" style="width: 100%; height: 450px; border-radius: 20px; object-fit: cover;" />

    <!-- Contenedor para los labels y el botón -->
    <div class="position-absolute top-50 start-0 translate-middle-y p-4" style="color: #ffffff; background: rgba(0, 0, 0, 0.5); border-radius: 20px; margin-left: 30px; margin:15px">
        <h1 style="font-size: 2.5rem; font-family: 'Georgia', serif;">Consultorio de Especialidades Médicas</h1>
        <h3 style="font-size: 1.75rem; font-family: 'Georgia', serif;">Cuidamos de Ti con Excelencia Médica</h3>
        <a asp-controller="Servicios" asp-action="Turnos" class="btn btn-outline-light mt-3" style="font-size: 1.25rem; font-family: 'Georgia', serif; border-radius: 12px;">
            Turno online
        </a>
    </div>
</div>

<!-- Sección de Servicios -->
<div class="container mt-5" >
    <h2 class="text-center mb-4">Nuestros Servicios</h2>
    <div class="row g-4">
        <!-- Servicio 1 -->
        <div class="col-lg-4 col-md-6">
            <div class="card shadow-sm h-100">
                <img src="https://hsmcidadeocidental.com.br/wp-content/uploads/2023/06/capa-Cardiologia.jpg" class="card-img-top" alt="Servicio Cardiología" style="height: 250px; object-fit: cover;">
                <div class="card-body text-center">
                    <h5 class="card-title">Cardiología</h5>
                    <p class="card-text">Atención especializada para el diagnóstico y tratamiento de enfermedades del corazón y sistema circulatorio.</p>
                </div>
            </div>
        </div>
        <!-- Servicio 2 -->
        <div class="col-lg-4 col-md-6">
            <div class="card shadow-sm h-100">
                <img src="https://www.esneca.lat/wp-content/uploads/dermatologia-estetica.png" class="card-img-top" alt="Servicio Dermatología" style="height: 250px; object-fit: cover;">
                <div class="card-body text-center">
                    <h5 class="card-title">Dermatología</h5>
                    <p class="card-text">Evaluación y tratamiento de afecciones de la piel, cabello y uñas, asegurando salud y estética.</p>
                </div>
            </div>
        </div>
        <!-- Servicio 3 -->
        <div class="col-lg-4 col-md-6">
            <div class="card shadow-sm h-100">
                <img src="https://as01.epimg.net/deporteyvida/imagenes/2017/10/08/portada/1507466195_601068_1507466306_noticia_normal.jpg" class="card-img-top" alt="Servicio Pediatría" style="height: 250px; object-fit: cover;">
                <div class="card-body text-center">
                    <h5 class="card-title">Pediatría</h5>
                    <p class="card-text">Cuidado integral de la salud infantil, desde recién nacidos hasta adolescentes, con un enfoque en prevención y bienestar.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sección de Contacto -->
<div class="container mt-5" id="contacto">
    <h2 class="text-center mb-4">Contáctanos</h2>
    <form class="p-4 shadow-sm rounded bg-light">
        <div class="mb-3">
            <label for="name" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="name" placeholder="Tu nombre" required>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Correo Electrónico</label>
            <input type="email" class="form-control" id="email" placeholder="nombre@ejemplo.com" required>
        </div>
        <div class="mb-3">
            <label for="message" class="form-label">Mensaje</label>
            <textarea class="form-control" id="message" rows="4" placeholder="Escribe tu mensaje aquí..." required></textarea>
        </div>
        <button type="submit" class="btn btn-primary w-100 py-2">Enviar</button>
    </form>
</div>
